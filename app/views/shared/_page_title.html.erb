<div class="row mb-5 mt-4 align-items-end">
  <div class="col">
    <h1 class="display-5 fw-bold mb-1 page-title-h1"><%= page_title %></h1>

    <% if defined?(subtitle) && subtitle.present? %>
      <p class="text-muted mb-0"><%= subtitle %></p>
    <% end %>
  </div>

  <% if defined?(actions) && actions.present? %>
    <div class="col-auto">
      <div class="page-title-actions-wrapper">
        <%= actions %>
      </div>
    </div>
  <% end %>
</div>

<style>
  .page-title-h1 {
    line-height: 1.2;
    margin-bottom: 0;
  }
  .page-title-actions-wrapper {
    display: flex;
    align-items: flex-end;
    gap: 0.5rem;
    height: calc(1.2em * 1.2);
    line-height: 1.2;
  }
  .page-title-actions-wrapper > * {
    vertical-align: bottom;
  }
  .page-title-actions-wrapper .btn,
  .page-title-actions-wrapper button,
  .page-title-actions-wrapper a.btn {
    vertical-align: bottom;
    align-self: flex-end;
    margin-bottom: 0;
  }
</style>
