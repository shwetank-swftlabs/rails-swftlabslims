<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
  <h3 class="fw-semibold mb-0">Images</h3>

  <div class="d-flex gap-2">
    <!-- View Toggle -->
    <div class="btn-group" role="group" aria-label="View toggle">
      <input type="radio" class="btn-check" name="imageViewToggle" id="gridViewToggle" autocomplete="off" checked>
      <label class="btn btn-outline-secondary" for="gridViewToggle" title="Grid View">
        <i class="bi bi-grid-3x3-gap"></i>
      </label>

      <input type="radio" class="btn-check" name="imageViewToggle" id="carouselViewToggle" autocomplete="off">
      <label class="btn btn-outline-secondary" for="carouselViewToggle" title="Carousel View">
        <i class="bi bi-images"></i>
      </label>
    </div>

    <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#genericAddImageModal">
      <i class="bi bi-upload me-2"></i> Upload Image
    </button>
  </div>
</div>

<!-- Upload Image Modal -->
<div class="modal fade" id="genericAddImageModal" tabindex="-1" aria-labelledby="genericAddImageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="genericAddImageModalLabel">Upload Image</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with url: url, local: true, multipart: true do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :file, "Choose an image or take a photo", class: "form-label" %>
            <%= f.file_field :file, class: "form-control", accept: "image/*", capture: "environment" %>
            <small class="form-text text-muted">On mobile devices, you can take a photo directly or choose from your gallery.</small>
          </div>

          <div class="mb-3">
            <%= f.label :label, "Label (optional)", class: "form-label" %>
            <%= f.text_field :label, class: "form-control", placeholder: "e.g., Front View" %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Upload", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>



