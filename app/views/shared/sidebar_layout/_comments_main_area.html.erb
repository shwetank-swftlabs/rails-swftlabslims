<!-- Comments Header + Add Comment Button -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="text-muted fw-bold mb-0">Comments</h3>

  <button 
    class="btn btn-secondary d-flex align-items-center"
    data-bs-toggle="modal"
    data-bs-target="#addCommentModal"
    style="font-size: 0.9rem;"
  >
    <i class="bi bi-chat-square-text me-2"></i>
    Add Comment
  </button>
</div>

<% comments.order(created_at: :desc).each do |comment| %>
  <div class="border rounded p-3 mb-3 bg-light">
    <div class="mb-2 text-muted" style="font-size: 0.85rem;">
      <span><%= comment.created_by %></span>
      &nbsp;â€¢&nbsp;
      <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
    </div>

    <div class="comment-body">
      <%= comment.body %>
    </div>
  </div>
<% end %>

<!-- Modal -->
<div class="modal fade" id="addCommentModal" tabindex="-1" aria-labelledby="addCommentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content p-5">

      <div class="modal-header p-2 mb-4">
        <h5 class="modal-title" id="addCommentModalLabel">Add Comment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with(
        url: url,
        scope: :comment,
        local: true
      ) do |form| %>
        <div class="modal-body p-2">
          <div class="mb-3">
            <%= form.rich_text_area :body, class: "form-control", style: "min-height: 200px;" %>
          </div>
        </div>

        <div class="modal-footer p-4">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
          <%= form.submit "Add Comment", class: "btn btn-secondary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
