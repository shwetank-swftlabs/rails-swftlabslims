<div class="d-flex justify-content-center">
  <div class="w-100" style="max-width: 600px;">

    <% if images.present? %>
      <div id="<%= carousel_id %>" class="carousel slide" data-bs-ride="carousel">

        <div class="carousel-inner rounded shadow-sm bg-light">

          <% images.each_with_index do |img, index| %>
            <div class="carousel-item <%= "active" if index == 0 %>" 
                 data-name="<%= img.name %>" 
                 data-label="<%= img.label %>">
              <div class="d-flex flex-column align-items-center justify-content-center p-3 carousel-image-container">
                <a href="<%= img.drive_file_url%>" target="_blank" class="text-decoration-none d-block w-100">
                  <%= image_tag img.served_url,
                      class: "img-fluid rounded shadow-sm carousel-image",
                      alt: img.name %>
                </a>
              </div>
            </div>
          <% end %>

        </div>

        <% if images.count > 1 %>
          <button class="carousel-control-prev" type="button"
                  data-bs-target="#<%= carousel_id %>" data-bs-slide="prev"
                  aria-label="Previous image">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>

          <button class="carousel-control-next" type="button"
                  data-bs-target="#<%= carousel_id %>" data-bs-slide="next"
                  aria-label="Next image">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        <% end %>

        <div class="mt-3 text-center">
          <p class="mb-1 small fw-semibold text-dark carousel-name">
            <%= images.first&.name || "No Name" %>
          </p>
          <p class="mb-0 text-muted small fw-medium carousel-label" style="<%= 'display: none;' unless images.first&.label.present? %>">
            <%= images.first&.label %>
          </p>
        </div>

        <div class="d-flex justify-content-end align-items-center mt-2">
          <span class="badge bg-secondary bg-opacity-75 text-dark">
            <span class="current-index fw-semibold">1</span> / <span class="fw-normal"><%= images.count %></span>
          </span>
        </div>

      </div>

    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
        <p class="text-muted fst-italic mt-3 mb-0">No images uploaded yet.</p>
      </div>
    <% end %>

  </div>
</div>
