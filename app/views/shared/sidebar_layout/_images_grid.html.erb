<% if images.present? %>
  <div class="row g-3">
    <% images.each do |img| %>
      <div class="col-6 col-md-4 col-lg-3">
        <div class="card border-0 shadow-sm h-100 image-grid-card">
          <a href="<%= img.drive_file_url %>" target="_blank" class="text-decoration-none">
            <div class="image-grid-container">
              <%= image_tag img.served_url,
                  class: "card-img-top image-grid-image",
                  alt: img.label %>
            </div>
          </a>
          <div class="card-body p-2">
            <p class="card-text small mb-1 text-center fw-semibold text-dark">
              <%= img.name %>
            </p>
            <% if img.label.present? %>
              <p class="card-text small text-muted mb-0 text-center">
                <%= img.label %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
    <p class="text-muted fst-italic mt-3 mb-0">No images uploaded yet.</p>
  </div>
<% end %>

