<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
  <h3 class="fw-semibold mb-0">Data Files</h3>

  <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#genericAddDataFileModal">
    <i class="bi bi-upload me-2"></i> Upload Data File
  </button>
</div>

<!-- Upload Data File Modal -->
<div class="modal fade" id="genericAddDataFileModal" tabindex="-1" aria-labelledby="genericAddDataFileModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-fullscreen-lg-down" style="max-width: 70vh">
    <div class="modal-content p-4">

      <div class="modal-header">
        <h5 class="modal-title" id="genericAddDataFileModalLabel">Upload Data File</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with url: url, local: true, multipart: true, id: "uploadDataFileForm" do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :file, class: "form-label" do %>
              Choose a file
              <span class="text-danger">*</span>
            <% end %>
            <%= f.file_field :file, 
                class: "form-control", 
                required: true,
                id: "dataFileInput",
                accept: ".csv,.xls,.xlsx,.xlsm,.pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel.sheet.macroEnabled.12,application/pdf" %>
            <small class="form-text text-muted">CSV, Excel files (.csv, .xls, .xlsx, .xlsm), and PDF files (.pdf) are allowed.</small>
          </div>

          <div class="mb-3">
            <%= f.label :data_type, class: "form-label" do %>
              Data Type
              <span class="text-danger">*</span>
            <% end %>
            <select id="dataTypeSelect" class="form-select mb-2" onchange="handleDataTypeSelect(this)">
              <option value="">Select a data type...</option>
              <% data_types.each do |data_type| %>
                <option value="<%= data_type %>"><%= data_type.titleize %></option>
              <% end %>
            </select>
            <%= f.text_field :data_type, 
                id: "dataTypeInput",
                class: "form-control", 
                required: true,
                placeholder: "Enter data type" %>
          </div>

          <div class="mb-3">
            <%= f.label :label, "Label (optional)", class: "form-label" %>
            <%= f.text_field :label, class: "form-control", placeholder: "e.g., Batch 001" %>
          </div>
        </div>

        <div class="modal-footer d-flex justify-content-between">
          <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancel</button>
          <%= f.button type: "submit", class: "btn btn-primary d-flex align-items-center", id: "uploadDataFileSubmit", onclick: "const fileInput = document.getElementById('dataFileInput'); const dataTypeInput = document.getElementById('dataTypeInput'); const fileName = fileInput?.files?.[0]?.name || 'this file'; const dataType = dataTypeInput?.value?.trim() || 'the selected data type'; return confirm(`Are you sure you want to upload \"${fileName}\" with data type \"${dataType}\"?`);" do %>
            <i class="bi bi-upload me-2"></i>
            Upload
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<!-- Data Files List -->
<% if data_files.present? %>
  <table class="table table-sm table-bordered align-middle" style="font-size: 0.85rem;">
    <thead class="table-light">
      <tr>
        <th class="py-2 ps-3">File Name</th>
        <th class="py-2 ps-3">Label</th>
        <th class="py-2 ps-3">Data Type</th>
        <th class="py-2 ps-3">Uploaded By</th>
        <th class="py-2 ps-3">Date</th>
        <th class="py-2 ps-3">View Data</th>
        <th class="py-2 ps-3">Open File</th>
        <th class="py-2 ps-3 text-center">Public</th>
      </tr>
    </thead>
    <tbody>
      <% data_files.each do |data_file| %>
        <tr>
          <td class="py-2 ps-3">
            <a href="<%= data_file.drive_file_url %>" target="_blank" class="text-decoration-none fw-semibold">
              <%= data_file.file_name %>
            </a>
          </td>
          <td class="py-2 ps-3"><%= data_file.label.presence || "—" %></td>
          <td class="py-2 ps-3"><%= data_file.data_type.humanize %></td>
          <td class="py-2 ps-3"><%= email_to_name(data_file.created_by) %></td>
          <td class="py-2 ps-3"><%= format_date(data_file.created_at) %></td>
          <td class="py-2 ps-3">
            <% if data_file.parsed_data.present? %>
              <button 
                class="btn btn-sm btn-outline-primary" 
                data-bs-toggle="modal" 
                data-bs-target="#viewFileDataModal"
                data-data-file-id="<%= data_file.id %>"
                data-data-file-url="<%= polymorphic_path([data_file.attachable, data_file]) %>"
                data-data-file-name="<%= data_file.file_name %>"
                onclick="loadFileData(this)">
                <i class="bi bi-eye me-1"></i> View Data
              </button>
            <% else %>
              <span class="text-muted">NA</span>
            <% end %>
          </td>
          <td class="py-2 ps-3">
            <a href="<%= data_file.drive_file_url %>" target="_blank" class="text-decoration-none">
              <i class="bi bi-box-arrow-up-right"></i>
              Open File
            </a>
          </td>
          <td class="py-2 ps-3 text-center">
            <% if data_file.pdf? %>
              <div class="d-flex flex-column align-items-center gap-2">
                <div class="form-check form-switch d-inline-block">
                  <input 
                    class="form-check-input" 
                    type="checkbox" 
                    role="switch" 
                    id="public-toggle-<%= data_file.id %>"
                    <%= 'checked' if data_file.is_public %>
                    data-data-file-id="<%= data_file.id %>"
                    data-data-file-name="<%= data_file.file_name %>"
                    onchange="togglePublicStatus(this)"
                  >
                  <label class="form-check-label" for="public-toggle-<%= data_file.id %>">
                    <% if data_file.is_public %>
                      <span class="badge bg-success">Public</span>
                    <% else %>
                      <span class="badge bg-secondary">Private</span>
                    <% end %>
                  </label>
                </div>
                <% if data_file.is_public && data_file.public_token.present? %>
                  <button 
                    class="btn btn-sm btn-outline-secondary"
                    onclick="copyPublicUrl(this, '<%= public_data_file_url(data_file.public_token) %>')"
                    title="Copy public URL"
                    data-copied-text="Copied!"
                  >
                    <i class="bi bi-clipboard me-1"></i> Copy URL
                  </button>
                <% end %>
              </div>
            <% else %>
              <span class="text-muted">—</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="text-center py-4">
    <i class="bi bi-file-earmark text-muted" style="font-size: 2.5rem;"></i>
    <p class="text-muted fst-italic mt-2 mb-0">No data files uploaded yet.</p>
  </div>
<% end %>

<!-- View File Data Modal -->
<div class="modal fade" id="viewFileDataModal" tabindex="-1" aria-labelledby="viewFileDataModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="viewFileDataModalLabel">View File Data</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="viewFileDataModalBody">
        <div class="text-center py-4">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function handleDataTypeSelect(select) {
    const dataTypeInput = document.getElementById('dataTypeInput');
    const selectedOption = select.options[select.selectedIndex];
    const selectedValue = select.value;
    
    if (selectedValue && selectedValue !== 'other') {
      // Auto-fill the input with the selected value
      dataTypeInput.value = selectedValue;
    } else if (selectedValue === 'other') {
      // Clear the input when 'other' is selected so user can type custom value
      dataTypeInput.value = '';
      dataTypeInput.focus();
    } else {
      // Clear when no selection
      dataTypeInput.value = '';
    }
  }

  function loadFileData(button) {
    const dataFileUrl = button.getAttribute('data-data-file-url');
    const dataFileName = button.getAttribute('data-data-file-name');
    const modalBody = document.getElementById('viewFileDataModalBody');
    const modalTitle = document.getElementById('viewFileDataModalLabel');
    
    if (!modalBody || !modalTitle) {
      console.error('Modal elements not found');
      return;
    }
    
    if (!dataFileUrl) {
      console.error('Data file URL not found');
      modalBody.innerHTML = '<div class="alert alert-danger">Error: Data file URL not found.</div>';
      return;
    }
    
    // Update modal title with file name
    if (dataFileName) {
      modalTitle.textContent = 'View File Data: ' + dataFileName;
    }
    
    // Show loading state
    modalBody.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';
    
    // Fetch the data
    fetch(dataFileUrl, {
      headers: {
        'Accept': 'text/html',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => {
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      return response.text();
    })
    .then(html => {
      modalBody.innerHTML = html;
    })
    .catch(error => {
      console.error('Error loading file data:', error);
      modalBody.innerHTML = '<div class="alert alert-danger"><i class="bi bi-exclamation-triangle me-2"></i>Error loading file data. Please try again.</div>';
    });
  }

  function copyPublicUrl(button, url) {
    // Copy to clipboard
    navigator.clipboard.writeText(url).then(() => {
      // Show feedback
      const originalHTML = button.innerHTML;
      const originalText = button.getAttribute('data-copied-text') || 'Copied!';
      button.innerHTML = '<i class="bi bi-check-circle me-1"></i>' + originalText;
      button.classList.remove('btn-outline-secondary');
      button.classList.add('btn-success');
      button.disabled = true;
      
      // Reset after 2 seconds
      setTimeout(() => {
        button.innerHTML = originalHTML;
        button.classList.remove('btn-success');
        button.classList.add('btn-outline-secondary');
        button.disabled = false;
      }, 2000);
    }).catch(err => {
      console.error('Failed to copy URL:', err);
      // Fallback: select text in a temporary input
      const tempInput = document.createElement('input');
      tempInput.value = url;
      document.body.appendChild(tempInput);
      tempInput.select();
      document.execCommand('copy');
      document.body.removeChild(tempInput);
      
      // Show feedback
      const originalHTML = button.innerHTML;
      button.innerHTML = '<i class="bi bi-check-circle me-1"></i>Copied!';
      button.classList.remove('btn-outline-secondary');
      button.classList.add('btn-success');
      setTimeout(() => {
        button.innerHTML = originalHTML;
        button.classList.remove('btn-success');
        button.classList.add('btn-outline-secondary');
      }, 2000);
    });
  }

  function showSuccessMessage(message) {
    // Create alert element
    const alertDiv = document.createElement('div');
    alertDiv.className = 'alert alert-success alert-dismissible fade show mb-3';
    alertDiv.setAttribute('role', 'alert');
    alertDiv.innerHTML = `
      <i class="bi bi-check-circle me-2"></i>${message}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    `;
    
    // Find the data files section header (the div with "Data Files" heading)
    const dataFilesHeader = document.querySelector('h3.fw-semibold.mb-0');
    if (dataFilesHeader) {
      const headerContainer = dataFilesHeader.closest('.d-flex.justify-content-between');
      if (headerContainer && headerContainer.parentElement) {
        // Insert alert right after the header container
        headerContainer.parentElement.insertBefore(alertDiv, headerContainer.nextSibling);
        
        // Auto-dismiss after 5 seconds
        setTimeout(() => {
          const bsAlert = bootstrap.Alert.getOrCreateInstance(alertDiv);
          bsAlert.close();
        }, 5000);
      }
    }
  }

  // Clear modal content when it's closed
  const viewFileDataModal = document.getElementById('viewFileDataModal');
  if (viewFileDataModal) {
    viewFileDataModal.addEventListener('hidden.bs.modal', function () {
      const modalBody = document.getElementById('viewFileDataModalBody');
      const modalTitle = document.getElementById('viewFileDataModalLabel');
      if (modalBody) {
        modalBody.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';
      }
      if (modalTitle) {
        modalTitle.textContent = 'View File Data';
      }
    });
  }

  function togglePublicStatus(checkbox) {
    const dataFileId = checkbox.getAttribute('data-data-file-id');
    const dataFileName = checkbox.getAttribute('data-data-file-name');
    const isChecked = checkbox.checked;
    const action = isChecked ? 'make public' : 'make private';
    
    // Confirm before toggling
    if (!confirm(`Are you sure you want to ${action} "${dataFileName}"?`)) {
      // Revert checkbox state if user cancels
      checkbox.checked = !isChecked;
      return;
    }

    // Disable checkbox during request
    checkbox.disabled = true;
    const label = checkbox.nextElementSibling;
    const originalLabelHTML = label.innerHTML;

    // Show loading state
    label.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Updating...';

    // Get CSRF token
    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content');
    if (!csrfToken) {
      checkbox.checked = !isChecked;
      label.innerHTML = originalLabelHTML;
      alert('Security token not found. Please refresh the page and try again.');
      checkbox.disabled = false;
      return;
    }

    // Make AJAX request
    fetch(`/data_files/${dataFileId}/toggle_public`, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      }
    })
    .then(response => {
      if (!response.ok) {
        return response.json().then(err => { throw err; });
      }
      return response.json();
    })
    .then(data => {
      // Update checkbox state
      checkbox.checked = data.is_public;
      
      // Update label badge
      if (data.is_public) {
        label.innerHTML = '<span class="badge bg-success">Public</span>';
      } else {
        label.innerHTML = '<span class="badge bg-secondary">Private</span>';
      }
      
      // Show/hide copy URL button
      const formSwitch = checkbox.closest('.form-check');
      const container = formSwitch.parentElement;
      if (data.is_public && data.public_token) {
        // Add copy button if it doesn't exist
        if (!container.querySelector('.btn-outline-secondary')) {
          const copyButton = document.createElement('button');
          copyButton.className = 'btn btn-sm btn-outline-secondary';
          const publicUrl = window.location.origin + '/public/data_files/' + data.public_token;
          copyButton.setAttribute('onclick', `copyPublicUrl(this, '${publicUrl}')`);
          copyButton.setAttribute('title', 'Copy public URL');
          copyButton.setAttribute('data-copied-text', 'Copied!');
          copyButton.innerHTML = '<i class="bi bi-clipboard me-1"></i> Copy URL';
          container.appendChild(copyButton);
        } else {
          // Update existing button URL
          const existingButton = container.querySelector('.btn-outline-secondary');
          const publicUrl = window.location.origin + '/public/data_files/' + data.public_token;
          existingButton.setAttribute('onclick', `copyPublicUrl(this, '${publicUrl}')`);
        }
      } else {
        // Remove copy button if exists
        const copyButton = container.querySelector('.btn-outline-secondary');
        if (copyButton) {
          copyButton.remove();
        }
      }
      
      // Show success message
      showSuccessMessage(`File "${dataFileName}" is now ${data.is_public ? 'public' : 'private'}.`);
    })
    .catch(error => {
      console.error('Error toggling public status:', error);
      
      // Revert checkbox state on error
      checkbox.checked = !isChecked;
      label.innerHTML = originalLabelHTML;
      
      // Show error message
      alert(`Failed to ${action} file: ${error.error || 'Unknown error'}`);
    })
    .finally(() => {
      // Re-enable checkbox
      checkbox.disabled = false;
    });
  }
</script>

