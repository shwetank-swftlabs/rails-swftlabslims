<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
  <h3 class="fw-semibold mb-0">Data Files</h3>

  <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#genericAddDataFileModal">
    <i class="bi bi-upload me-2"></i> Upload Data File
  </button>
</div>

<!-- Upload Data File Modal -->
<div class="modal fade" id="genericAddDataFileModal" tabindex="-1" aria-labelledby="genericAddDataFileModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-fullscreen-lg-down" style="max-width: 70vh">
    <div class="modal-content p-4">

      <div class="modal-header">
        <h5 class="modal-title" id="genericAddDataFileModalLabel">Upload Data File</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with url: url, local: true, multipart: true, id: "uploadDataFileForm" do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :file, class: "form-label" do %>
              Choose a file
              <span class="text-danger">*</span>
            <% end %>
            <%= f.file_field :file, 
                class: "form-control", 
                required: true,
                id: "dataFileInput",
                accept: ".csv,.xls,.xlsx,.xlsm,.pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel.sheet.macroEnabled.12,application/pdf" %>
            <small class="form-text text-muted">CSV, Excel files (.csv, .xls, .xlsx, .xlsm), and PDF files (.pdf) are allowed.</small>
          </div>

          <div class="mb-3">
            <%= f.label :data_type, class: "form-label" do %>
              Data Type
              <span class="text-danger">*</span>
            <% end %>
            <select id="dataTypeSelect" class="form-select mb-2" onchange="handleDataTypeSelect(this)">
              <option value="">Select a data type...</option>
              <% data_types.each do |data_type| %>
                <option value="<%= data_type %>"><%= data_type.titleize %></option>
              <% end %>
            </select>
            <%= f.text_field :data_type, 
                id: "dataTypeInput",
                class: "form-control", 
                required: true,
                placeholder: "Enter data type" %>
          </div>

          <div class="mb-3">
            <%= f.label :label, "Label (optional)", class: "form-label" %>
            <%= f.text_field :label, class: "form-control", placeholder: "e.g., Batch 001" %>
          </div>
        </div>

        <div class="modal-footer d-flex justify-content-between">
          <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancel</button>
          <%= f.button type: "submit", class: "btn btn-primary d-flex align-items-center", id: "uploadDataFileSubmit" do %>
            <i class="bi bi-upload me-2"></i>
            Upload
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<!-- Data Files List -->
<% if data_files.present? %>
  <table class="table table-sm table-bordered align-middle" style="font-size: 0.85rem;">
    <thead class="table-light">
      <tr>
        <th class="py-2 ps-3">File Name</th>
        <th class="py-2 ps-3">Label</th>
        <th class="py-2 ps-3">Data Type</th>
        <th class="py-2 ps-3">Uploaded By</th>
        <th class="py-2 ps-3">Date</th>
        <th class="py-2 ps-3">View Data</th>
        <th class="py-2 ps-3">Open File</th>
      </tr>
    </thead>
    <tbody>
      <% data_files.each do |data_file| %>
        <tr>
          <td class="py-2 ps-3">
            <a href="<%= data_file.drive_file_url %>" target="_blank" class="text-decoration-none fw-semibold">
              <%= data_file.file_name %>
            </a>
          </td>
          <td class="py-2 ps-3"><%= data_file.label.presence || "â€”" %></td>
          <td class="py-2 ps-3"><%= data_file.data_type.humanize %></td>
          <td class="py-2 ps-3"><%= data_file.created_by %></td>
          <td class="py-2 ps-3"><%= format_date(data_file.created_at) %></td>
          <td class="py-2 ps-3">
            <% if data_file.parsed_data.present? %>
              <button 
                class="btn btn-sm btn-outline-primary" 
                data-bs-toggle="modal" 
                data-bs-target="#viewFileDataModal"
                data-data-file-id="<%= data_file.id %>"
                data-data-file-url="<%= polymorphic_path([data_file.attachable, data_file]) %>"
                data-data-file-name="<%= data_file.file_name %>"
                onclick="loadFileData(this)">
                <i class="bi bi-eye me-1"></i> View Data
              </button>
            <% else %>
              <span class="text-muted">NA</span>
            <% end %>
          </td>
          <td class="py-2 ps-3">
            <a href="<%= data_file.drive_file_url %>" target="_blank" class="text-decoration-none">
              <i class="bi bi-box-arrow-up-right"></i>
              Open File
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="text-center py-4">
    <i class="bi bi-file-earmark text-muted" style="font-size: 2.5rem;"></i>
    <p class="text-muted fst-italic mt-2 mb-0">No data files uploaded yet.</p>
  </div>
<% end %>

<!-- View File Data Modal -->
<div class="modal fade" id="viewFileDataModal" tabindex="-1" aria-labelledby="viewFileDataModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="viewFileDataModalLabel">View File Data</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="viewFileDataModalBody">
        <div class="text-center py-4">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Attach confirmation dialog when modal is shown
  document.addEventListener('DOMContentLoaded', function() {
    const addDataFileModal = document.getElementById('genericAddDataFileModal');
    if (addDataFileModal) {
      addDataFileModal.addEventListener('shown.bs.modal', function() {
        const uploadForm = document.getElementById('uploadDataFileForm');
        if (uploadForm) {
          uploadForm.onsubmit = function(e) {
            const fileInput = document.getElementById('dataFileInput');
            const dataTypeInput = document.getElementById('dataTypeInput');
            
            if (!fileInput || !fileInput.files || fileInput.files.length === 0) {
              return true; // Let browser validation handle this
            }
            
            if (!dataTypeInput || !dataTypeInput.value.trim()) {
              return true; // Let browser validation handle this
            }
            
            const fileName = fileInput.files[0].name;
            const dataType = dataTypeInput.value.trim();
            
            // Show confirmation alert
            const confirmed = confirm(`Are you sure you want to upload "${fileName}" with data type "${dataType}"?`);
            
            return confirmed;
          };
        }
      });
    }
  });

  function handleDataTypeSelect(select) {
    const dataTypeInput = document.getElementById('dataTypeInput');
    const selectedOption = select.options[select.selectedIndex];
    const selectedValue = select.value;
    
    if (selectedValue && selectedValue !== 'other') {
      // Auto-fill the input with the selected value
      dataTypeInput.value = selectedValue;
    } else if (selectedValue === 'other') {
      // Clear the input when 'other' is selected so user can type custom value
      dataTypeInput.value = '';
      dataTypeInput.focus();
    } else {
      // Clear when no selection
      dataTypeInput.value = '';
    }
  }

  function loadFileData(button) {
    const dataFileUrl = button.getAttribute('data-data-file-url');
    const dataFileName = button.getAttribute('data-data-file-name');
    const modalBody = document.getElementById('viewFileDataModalBody');
    const modalTitle = document.getElementById('viewFileDataModalLabel');
    
    if (!modalBody || !modalTitle) {
      console.error('Modal elements not found');
      return;
    }
    
    if (!dataFileUrl) {
      console.error('Data file URL not found');
      modalBody.innerHTML = '<div class="alert alert-danger">Error: Data file URL not found.</div>';
      return;
    }
    
    // Update modal title with file name
    if (dataFileName) {
      modalTitle.textContent = 'View File Data: ' + dataFileName;
    }
    
    // Show loading state
    modalBody.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';
    
    // Fetch the data
    fetch(dataFileUrl, {
      headers: {
        'Accept': 'text/html',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => {
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      return response.text();
    })
    .then(html => {
      modalBody.innerHTML = html;
    })
    .catch(error => {
      console.error('Error loading file data:', error);
      modalBody.innerHTML = '<div class="alert alert-danger"><i class="bi bi-exclamation-triangle me-2"></i>Error loading file data. Please try again.</div>';
    });
  }

  // Clear modal content when it's closed
  const viewFileDataModal = document.getElementById('viewFileDataModal');
  if (viewFileDataModal) {
    viewFileDataModal.addEventListener('hidden.bs.modal', function () {
      const modalBody = document.getElementById('viewFileDataModalBody');
      const modalTitle = document.getElementById('viewFileDataModalLabel');
      if (modalBody) {
        modalBody.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';
      }
      if (modalTitle) {
        modalTitle.textContent = 'View File Data';
      }
    });
  }
</script>

