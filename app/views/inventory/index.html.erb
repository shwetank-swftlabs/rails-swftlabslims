<!-- PAGE HEADER -->
<% content_for :page_title, render("shared/page_title", title: "Inventory",
subtitle: "Manage equipment, chemicals, feedstock, and library samples from one place.") %>
<% content_for :title, "Inventory" %>

<!-- MAIN CONTENT -->
<div class="row g-5">

  <%= render "shared/feature_card",
      icon: "bi-tools",
      title: "Equipments",
      subtitle: "Physical instruments and devices",
      view_label: "View all equipments",
      view_path: inventory_equipments_path,
      add_label: "Add equipment",
      add_path: new_inventory_equipment_path %>

  <%= render "shared/feature_card",
      icon: "bi-droplet-half",
      title: "Chemicals",
      subtitle: "Reagents, solvents, and consumables",
      view_label: "View all chemicals",
      view_path: inventory_chemicals_path,
      add_label: "Add chemical",
      add_path: new_inventory_chemical_path %>

  <%= render "shared/feature_card",
      icon: "bi-box-seam",
      title: "Feedstock",
      subtitle: "Raw materials and inputs",
      view_label: "View all feedstock",
      view_path: inventory_feedstocks_path,
      add_label: "Add feedstock",
      add_path: new_inventory_feedstock_path %>

  <%= render "shared/feature_card",
      icon: "bi-collection",
      title: "Library Samples",
      subtitle: "Sample library management",
      view_label: "View all library samples",
      view_path: inventory_library_samples_path,
      add_label: "Add library sample",
      add_path: new_inventory_library_sample_path %>

</div>

