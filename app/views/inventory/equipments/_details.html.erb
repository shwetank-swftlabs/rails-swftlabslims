<%= render "shared/sidebar_layout/details_list_main_area", details: {
  "Name" => @equipment.name,
  "Code" => @equipment.code,
  "Type" => @equipment.equipment_type&.name&.humanize || "N/A",
  "Supplier" => @equipment.supplier.present? ? @equipment.supplier.humanize : "N/A",
  "Location" => @equipment.location.present? ? @equipment.location.humanize : "N/A",
  "Status" => (@equipment.is_active? ? 
    '<span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Active</span>'.html_safe :
    '<span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Inactive</span>'.html_safe),
  "Created By" => @equipment.created_by,
  "Created At" => @equipment.created_at.strftime("%B %d, %Y %I:%M %p")
}
%>