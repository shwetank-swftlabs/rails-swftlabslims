<% content_for :page_title, render("shared/page_title",
  subtitle: "Manage equipment and their data.",
  actions: render("shared/add_button", label: "Add New Equipment", path: new_inventory_equipment_path)
) %>

<!-- UNIFIED FILTER BAR -->
<%= render "shared/tables/default_filter_bar",
      url: inventory_equipments_path,
      search_placeholder: "Search by nameâ€¦",
      filter_fields: ->(f) do %>

  <!-- Type Filter -->
  <div class="col-md-3">
    <%= f.select :equipment_type_id,
        Admin::EquipmentType.all.map { |et| [et.name, et.id] },
        {
          include_blank: "Filter by Type",
          selected: params[:equipment_type_id]
        },
        class: "form-select",
        onchange: "this.form.submit();" %>
  </div>

  <!-- Active Status Filter -->
  <div class="col-md-3">
    <%= f.select :is_active,
        [["Active", "true"], ["Inactive", "false"]],
        {
          include_blank: "Filter by Status",
          selected: params[:is_active]
        },
        class: "form-select",
        onchange: "this.form.submit();" %>
  </div>

<% end %>

<!-- EQUIPMENT TABLE -->
<%= render "shared/tables/default_table",
      collection: @equipments,
      pagy: @pagy,
      headers: ->(_) do %>
        <th>Name</th>
        <th>Code</th>
        <th>Type</th>
        <th>Location</th>
        <th>Status</th>
        <th>Print QR</th>
      <% end,
      row: ->(equipment) do %>
        <td><%= link_to equipment.name, inventory_equipment_path(equipment), class: "text-decoration-underline fw-semibold" %></td>
        <td><%= equipment.code %></td>
        <td><%= equipment.equipment_type&.name&.humanize || "N/A" %></td>
        <td><%= equipment.location.present? ? equipment.location.humanize : "N/A" %></td>
        <td>
          <% if equipment.is_active? %>
            <span class="badge bg-success">
              <i class="bi bi-check-circle me-1"></i>Active
            </span>
          <% else %>
            <span class="badge bg-danger">
              <i class="bi bi-x-circle me-1"></i>Inactive
            </span>
          <% end %>
        </td>
        <td><%= render "shared/print_qr_button", 
                        qr_code_path: qr_code_inventory_equipment_path(equipment),
                        label: "Print QR" %>
        </td>
      <% end %>