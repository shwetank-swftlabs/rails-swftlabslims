<% content_for :page_title,
   render("shared/page_title",
     subtitle: "View and manage equipment information.",
     actions: link_to(edit_inventory_equipment_path(@equipment), class: "btn btn-primary") do
       tag.i("", class: "bi bi-pencil me-1") + "Edit Equipment"
     end
   )
%>

<%= render "shared/sidebar_layout/layout",
    tabs: ["details", "maintenance_records", "operation_manual", "images", "comments"],
    tab_path: :inventory_equipment_path,
    path_args: [@equipment],
    bottom_action: tag.button(
      "Mark Inactive",
      type: "button",
      class: "btn btn-outline-danger w-100",
      onclick: "alert('Marking inactive is Work in Progress.')"
    ) do %>

  <%= render (params[:tab] || "details"), equipment: @equipment %>

<% end %>
