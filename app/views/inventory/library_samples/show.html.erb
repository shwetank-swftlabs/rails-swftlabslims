  actions: render("shared/print_qr_button", qr_code_path: qr_code_inventory_library_sample_path(@library_sample))
) %>

<%= render "shared/sidebar_layout/layout",
    tabs: ["details", "comments"],
    tab_path: :inventory_library_sample_path,
