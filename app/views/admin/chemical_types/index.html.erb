<% content_for :page_title, render("shared/page_title",
  subtitle: "Manage chemical types.",
  actions: link_to(new_admin_chemical_type_path, class: "btn btn-primary") do %>
    <i class="bi bi-plus-circle me-1"></i>Add Chemical Type
  <% end
) %>

<!-- CHEMICAL TYPES TABLE -->
<%= render "shared/tables/default_table",
      collection: @chemical_types,
      pagy: nil,
      headers: ->(_) do %>
        <th>Name</th>
        <th>Status</th>
        <th>Actions</th>
      <% end,
      row: ->(chemical_type) do %>
        <td class="fw-semibold"><%= chemical_type.name %></td>
        <td>
          <% if chemical_type.is_active? %>
            <span class="badge bg-success">
              <i class="bi bi-check-circle me-1"></i>Active
            </span>
          <% else %>
            <span class="badge bg-danger">
              <i class="bi bi-x-circle me-1"></i>Inactive
            </span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_chemical_type_path(chemical_type), class: "btn btn-sm btn-outline-secondary px-3" do %>
            <i class="bi bi-pencil me-1"></i>Edit
          <% end %>
        </td>
      <% end %>

