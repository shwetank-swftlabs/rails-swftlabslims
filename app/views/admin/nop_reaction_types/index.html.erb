<% content_for :page_title, render("shared/page_title",
  subtitle: "Manage NOP reaction types.",
  actions: render("shared/add_button", label: "Add NOP Reaction Type", path: new_admin_nop_reaction_type_path)
) %>

<!-- NOP REACTION TYPES TABLE -->
<%= render "shared/tables/default_table",
      collection: @nop_reaction_types,
      pagy: nil,
      headers: ->(_) do %>
        <th>Name</th>
        <th>Status</th>
        <th>Actions</th>
      <% end,
      row: ->(nop_reaction_type) do %>
        <td class="fw-semibold"><%= nop_reaction_type.name %></td>
        <td>
          <% if nop_reaction_type.is_active? %>
            <span class="badge bg-success">
              <i class="bi bi-check-circle me-1"></i>Active
            </span>
          <% else %>
            <span class="badge bg-danger">
              <i class="bi bi-x-circle me-1"></i>Inactive
            </span>
          <% end %>
        </td>
        <td>
          <%= render "shared/edit_button", label: "Edit", path: edit_admin_nop_reaction_type_path(nop_reaction_type), size: "sm" %>
        </td>
      <% end %>

